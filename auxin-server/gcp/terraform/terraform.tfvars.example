# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in your values
# IMPORTANT: Never commit terraform.tfvars to version control

# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
environment = "dev"  # dev, staging, or prod

# Cloud Run Configuration
cpu           = "2"
memory        = "2Gi"
min_instances = 0
max_instances = 10
rust_log_level = "info,auxin_server=debug"

# Security Configuration
auth_token_secret   = "your-super-secret-auth-token-change-in-production"
allow_public_access = false
authorized_invokers = [
  # "user:user@example.com",
  # "serviceAccount:service-account@project.iam.gserviceaccount.com",
]

# Storage Configuration
enable_versioning = true

# Network Configuration
enable_vpc_connector = false

# CI/CD Configuration
enable_auto_deploy = true
github_owner       = "your-github-username"
github_repo        = "auxin"
